<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_library"
            android:layout_marginRight="@dimen/margin_library"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:layout_marginLeft="@dimen/forgot_margin"
                android:layout_marginRight="@dimen/forgot_margin"
                android:layout_marginTop="@dimen/margin_library">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/iv_detail_book_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />
                </android.support.v7.widget.CardView>
            </FrameLayout>


            <Button
                android:id="@+id/btn_detail_download_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/forgot_margin"
                android:layout_marginRight="@dimen/forgot_margin"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="Download Book"
                android:textAllCaps="false"
                android:theme="@style/AppTheme.GreenButton" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_library"
                android:layout_marginRight="@dimen/margin_library"
                android:layout_marginTop="8dp"
                android:orientation="vertical">">

                <TextView
                    android:id="@+id/tv_detail_book_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    tools:text="Темная башня" />

                <TextView
                    android:id="@+id/tv_detail_author_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textSize="19sp"
                    tools:text="Сттивен кинг" />

                <TextView
                    android:id="@+id/tv_detail_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textSize="19sp"
                    tools:text="Русский" />

                <TextView
                    android:id="@+id/tv_detail_genre_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textSize="19sp"
                    tools:text="Астрология. Астрономия" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="О книге"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_detail_about_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textSize="19dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
